<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/wifiview_px_70"
    xmlns:tools="http://schemas.android.com/tools">
    <View
        android:id="@+id/tv_line"
        android:background="@color/wifiview_divide_color"
        android:layout_marginLeft="@dimen/wifiview_px_20"
        android:layout_marginRight="@dimen/wifiview_px_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wifiview_stroke_width"/>
    <ImageView
        android:id="@+id/iv_levle"
        android:src="@drawable/wifiview_ic_wifi_01_white"
        android:scaleType="fitCenter"
        android:layout_width="@dimen/wifiview_px_42"
        android:layout_marginLeft="@dimen/wifiview_px_18"
        android:layout_centerVertical="true"
        android:layout_height="@dimen/wifiview_px_42"/>
    <LinearLayout
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/wifiview_px_18"
        android:layout_toRightOf="@+id/iv_levle"
        android:layout_toLeftOf="@+id/iv_lock"
        android:layout_marginRight="@dimen/wifiview_px_18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_name"
            android:textSize="@dimen/wifiview_text_size_22px"
            tools:text="uhome-fridge-2.4G"
            android:textColor="@color/wifiview_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_state"
            android:textSize="@dimen/wifiview_text_size_16px"
            android:text="已保存"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_marginTop="@dimen/wifiview_px_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_lock"
        android:src="@drawable/wifiview_ic_wifi_lock"
        android:layout_toLeftOf="@+id/iv_arrow"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/wifiview_px_6"
        android:scaleType="centerCrop"
        android:layout_width="@dimen/wifiview_px_42"
        android:layout_height="@dimen/wifiview_px_42"/>

    <ImageView
        android:id="@+id/iv_arrow"
        android:src="@drawable/wifiview_ic_arrow_right"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        android:layout_width="@dimen/wifiview_px_42"
        android:layout_height="@dimen/wifiview_px_42"/>
</RelativeLayout>