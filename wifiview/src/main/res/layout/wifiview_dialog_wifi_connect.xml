<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
    android:background="@color/wifiview_dialog_bg"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/wifiview_px_422">
        <TextView
            android:textColor="@color/wifiview_white"
            android:text="请输入密码"
            android:textSize="@dimen/wifiview_text_size_28px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_ssid"
            tools:text="tj24"
            android:textColor="@color/wifiview_white"
            android:layout_marginTop="@dimen/wifiview_px_30"
            android:textSize="@dimen/wifiview_text_size_24px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_marginTop="@dimen/wifiview_px_60"
            android:background="@drawable/wifiview_shape_wifi_pwd"
            android:layout_width="@dimen/wifiview_px_450"
            android:layout_height="@dimen/wifiview_px_54">
            <EditText
                android:id="@+id/et_pwd"
                android:textSize="@dimen/wifiview_text_size_24px"
                android:hint=""
                android:textColorHint="@color/wifiview_white"
                android:textColor="@color/wifiview_white"
                android:layout_marginLeft="@dimen/wifiview_px_16"
                android:background="@null"
                android:inputType="textPassword"
                android:layout_centerVertical="true"
                android:maxLength="64"
                android:layout_toLeftOf="@+id/iv_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/iv_pwd"
                android:layout_alignParentRight="true"
                android:src="@drawable/wifiview_ic_wifi_hide_pwd"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/wifiview_px_24"
                android:layout_width="@dimen/wifiview_px_36"
                android:layout_height="@dimen/wifiview_px_36"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/wifiview_px_58"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_cancle"
                android:text="取消"
                android:textSize="@dimen/wifiview_px_24"
                android:textColor="@color/wifiview_cancle_stroke"
                android:background="@drawable/wifiview_shape_wifi_cancle"
                android:layout_width="@dimen/wifiview_button_width"
                android:layout_height="@dimen/wifiview_button_height"/>
            <Button
                android:id="@+id/btn_connect"
                android:text="连接"
                android:alpha="0.3"
                android:textSize="@dimen/wifiview_text_size_24px"
                android:enabled="false"
                android:textColor="@color/wifiview_blue"
                android:background="@drawable/wifiview_shape_wifi_confirm"
                android:layout_marginLeft="@dimen/wifiview_px_60"
                android:layout_width="@dimen/wifiview_button_width"
                android:layout_height="@dimen/wifiview_button_height"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>